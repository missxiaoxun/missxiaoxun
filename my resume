                " type="text/javascript" ></script>
   <script type="text/javascript">
     //绘制canvas
     function drawScreen(){
      var c=document.getElementById("myCanvas_1");
      var cxt=c.getContext("2d");
      cxt.fillStyle="#00FFEE";
      cxt.shadowOffsetX=10;
      cxt.shadowOffsetY=10;
      cxt.shadowColor="#00FF77";
      cxt.shadowBlur=10;
      cxt.beginPath();
      cxt.moveTo(0,25);
      cxt.lineTo(500,25);
      cxt.lineTo(250,75);
      cxt.lineTo(0,25);
      cxt.stroke();
      cxt.fill();
      cxt.closePath();
      
      var d=document.getElementById("myCanvas_2");
      var ctx=d.getContext('2d');
      ctx.fillStyle="#00FFEE";
      ctx.shadowOffsetX=10;
      ctx.shadowOffsetY=-10;
      ctx.shadowColor="#00FF77";
      ctx.shadowBlur=10;
      ctx.beginPath();
      ctx.moveTo(250,75);
      ctx.lineTo(500,125);
      ctx.lineTo(0,125);
      ctx.lineTo(250,75);
      ctx.stroke();
      ctx.fill();
      ctx.closePath();

      }
      drawScreen();
      //jquery代码，实现交互页面
    $(function(){
      $("#myCanvas_1").click(function(){
        $("#firstPage").addClass("nodisplay");
        $("#secondPage").removeClass("nodisplay");
      });
      $("#myCanvas_2").click(function(){
        $("#firstPage").removeClass("nodisplay");
        $("#secondPage").addClass("nodisplay");
      }); 
      $("#exp").hover(function(){
        $("#experience").removeClass("nodisplay").siblings().addClass("nodisplay");
      });  
      $("#rew").hover(function(){
        $("#reward").removeClass("nodisplay").siblings().addClass("nodisplay");
      }); 
       $("#ski").hover(function(){
        $("#skills").removeClass("nodisplay").siblings().addClass("nodisplay");
      });  
       $("#eva").hover(function(){
        $("#evaluation").removeClass("nodisplay").siblings().addClass("nodisplay");
      });
       $(".navigation").mouseover(function(){
        $(this).addClass("highlight").siblings().removeClass("highlight");
      });  
    })
       
      
   </script>


